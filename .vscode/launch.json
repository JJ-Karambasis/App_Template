{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [ // Launch app for debugging
        {
            "name": "Launch Win32",
            "request": "launch",
            "type": "cppvsdbg",
            "program": "${workspaceFolder}/build/vs/2022/x64/debug/win32_app.exe",
            "cwd": "${workspaceFolder}/data"
        },
        {
            "name": "Launch Win32 Tests",
            "request": "launch",
            "type": "cppvsdbg",
            "program": "${workspaceFolder}/build/vs/2022/x64/debug/win32_test.exe",
            "cwd": "${workspaceFolder}/data"
        },
        {
            "name": "Launch OSX",
            "request": "launch",
            "type": "cppdbg",
            "program": "${workspaceFolder}/build/xcode/Build/Products/debug/osx-app.app",
            "cwd": "${workspaceFolder}/data",
            "MIMode": "lldb",
        }
    ]
}